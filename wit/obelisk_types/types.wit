package obelisk:types@1.0.0;

interface time {

    variant duration {
        milliseconds(u64),
        seconds(u64),
        minutes(u32),
        hours(u32),
        days(u32),
    }

    /// A time and date in seconds plus nanoseconds.
    // Extracted from wasi:clocks@0.2.0 to avoid dependency on wasi:io
    record datetime {
        seconds: u64,
        nanoseconds: u32,
    }

    variant schedule-at {
        now,
        at(datetime),
        in(duration),
    }
}

interface execution {
    resource join-set-id {
        // TODO: sleep-submit
        // TODO: await-next
    }
    record execution-id {
        id: string,
    }

    record delay-id {
        id: string,
    }

    variant execution-error {
        activity-trap(string),
        permanent-timeout,
    }
}
